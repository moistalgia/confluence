# Crypto Analyzer Environment Configuration
# Copy this file to .env and configure your API keys

# =============================================================================
# LLM CONFIGURATION
# =============================================================================

# Primary LLM Model (claude, openai, or custom)
PRIMARY_LLM_MODEL=claude

# Claude API Configuration (Anthropic)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# OpenAI API Configuration (Alternative)
OPENAI_API_KEY=your_openai_api_key_here  
OPENAI_MODEL=gpt-4

# LLM Request Configuration
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.1
LLM_TIMEOUT=120

# =============================================================================
# EXCHANGE API CONFIGURATION (Optional - for enhanced data)
# =============================================================================

# Binance API (Currently using public endpoints, but API keys can enhance data)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Kraken API (Currently using public endpoints)
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_SECRET_KEY=your_kraken_secret_key_here

# =============================================================================
# ANALYSIS CONFIGURATION
# =============================================================================

# Default symbols to analyze (comma-separated)
DEFAULT_SYMBOLS=BTC/USDT,ETH/USDT

# Analysis timeframes and periods
ANALYSIS_TIMEFRAMES=1w,1d,4h,1h
VOLUME_ANALYSIS_DAYS=30
VOLUME_ANALYSIS_TIMEFRAME=1h

# =============================================================================
# OUTPUT CONFIGURATION
# =============================================================================

# Output directory structure
OUTPUT_BASE_DIR=output/ultimate_analysis

# Report generation
GENERATE_HTML_REPORTS=true
GENERATE_MARKDOWN_REPORTS=true
GENERATE_PDF_REPORTS=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enhanced logging (saves detailed logs to files)
ENHANCED_LOGGING=true